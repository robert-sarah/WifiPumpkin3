{
    "wpa_cracking": {
        "enabled": true,
        "wordlist_path": "/usr/share/wordlists/rockyou.txt",
        "max_threads": 4,
        "timeout": 300
    },
    "dns_spoofing": {
        "enabled": true,
        "spoofed_domains": ["google.com", "facebook.com"],
        "redirect_to": "192.168.1.1"
    },
    "stealth": {
        "enabled": true,
        "mac_rotation": true,
        "noise_traffic": true,
        "process_hiding": true
    },
    "ssl": {
        "enabled": true,
        "cert_path": "/tmp/ssl_cert.pem",
        "key_path": "/tmp/ssl_key.pem"
    },
    "dashboard": {
        "enabled": true,
        "refresh_interval": 1000,
        "show_networks": true,
        "show_clients": true,
        "show_credentials": true
    },
    "system_requirements": {
        "check_tools": true,
        "check_privileges": true,
        "check_interfaces": true
    },
    "logging": {
        "level": "INFO",
        "file": "/tmp/wifipumpkin3.log",
        "max_size": "10MB",
        "backup_count": 5
    },
    "security": {
        "encrypt_logs": false,
        "encrypt_captures": false,
        "warn_before_attack": true,
        "confirm_stop": true
    }
} 